<resources>

    <!-- Base application theme. -->

    <style name="PathAppTheme" parent="Theme.AppCompat.Light.DarkActionBar" />

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppThemeNoTitle" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <!-- this is useful to prevent the keyboard from covering up the input fields -->
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="CustomFontTextViewStyle.Home.RegisterLabelCustom">
        <item name="fontVariant">regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">130dp</item>
    </style>

    <style name="CustomFontTextViewStyle.Home.RegisterNameCustom">
        <item name="fontVariant">black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingTop">55dp</item>
    </style>

    <style name="CustomFontTextViewStyle.Home.RegisterLabelCustomForField">
        <item name="fontVariant">regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">115dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorSecondary">#FFFFFF</item>
        <item name="android:actionMenuTextColor">#FFFFFF</item>
        <item name="actionMenuTextColor">#FFFFFF</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppThemeNoTitle.NoActionBar">
        <item name="colorControlNormal">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:actionMenuTextAppearance">@style/MenuTextAppearance</item>
    </style>

    <style name="AppThemeNoTitle.NoActionBar.NavigationDrawerStyle">
        <item name="android:textSize">20sp</item>
        <!-- text size in menu-->
        <item name="android:listPreferredItemHeightSmall">70dp</item>
        <!-- item size in menu-->
    </style>

    <style name="MenuTextAppearance" parent="android:TextAppearance.Holo.Widget.ActionBar.Menu">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/menu_item_text_size</item>
    </style>

    <style name="AppThemeNoTitle.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppThemeNoTitle.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppThemeNoActionBarAndTitleWithEditButton" parent="AppThemeNoTitle.NoActionBar">
        <item name="actionOverflowButtonStyle">@style/OverflowMenuButton</item>
    </style>

    <style name="OverflowMenuButton" parent="@android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_icon_edit</item>
    </style>

    <style name="Material.Drawable.RadioButton.AdvancedSearch" parent="Material.Drawable.RadioButton">
        <item name="rbd_width">40dp</item>
        <item name="rbd_height">40dp</item>
        <item name="rbd_strokeSize">2dp</item>
        <item name="rbd_radius">15dp</item>
        <item name="rbd_innerRadius">10dp</item>
        <item name="rbd_strokeColor">@drawable/advanced_search_rdb_stoke_color_list</item>
    </style>

    <style name="Material.Drawable.CheckBox.AdvancedSearch" parent="Material.Drawable.CheckBox">
        <item name="cbd_width">40dp</item>
        <item name="cbd_height">40dp</item>
        <item name="cbd_tickColor">@color/white</item>
        <item name="cbd_strokeColor">@drawable/advanced_search_cbd_stoke_color_list</item>
        <item name="cbd_cornerRadius">0dp</item>
        <item name="cbd_strokeSize">3dp</item>
        <item name="cbd_boxSize">25dp</item>
    </style>

    <style name="PathDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="PathAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <!--OLD APP-->
    <style name="CustomFontTextViewStyle" parent="@android:style/Widget.TextView">
        <item name="fontVariant">regular</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="CustomFontTextViewStyle.ListView.Normal" parent="CustomFontTextViewStyle">
        <item name="fontVariant">medium</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="CustomFontTextViewStyle.ListView.Normal.Bold" >
        <item name="fontVariant">bold</item>
    </style>

    <style name="CustomFontTextViewStyle.ListView.Normal.White">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CustomFontTextViewStyle.ListView.Normal.NoPadding">
        <item name="android:paddingLeft">0dp</item>
    </style>

    <style name="CustomFontTextViewStyle.ListView.Normal.TwoLine">
        <item name="android:maxLines">2</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:ellipsize">none</item>
    </style>

    <style name="CustomFontTextViewStyle.ListView.Small" parent="CustomFontTextViewStyle">
        <item name="fontVariant">medium</item>
        <item name="android:textSize">13sp</item>
        <item name="android:height">18dp</item>
    </style>

    <style name="CustomFontTextViewStyle.ListView.Small.NoPadding">
        <item name="android:paddingLeft">0dp</item>
    </style>

    <style name="CustomFontTextViewStyle.ListView.Small.NoHeight" parent="@android:style/Widget.TextView">
        <item name="fontVariant">medium</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:ellipsize">none</item>
    </style>

    <style name="CustomFontTextViewStyle.ListView.VerySmall" parent="CustomFontTextViewStyle">
        <item name="fontVariant">medium</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CustomFontTextViewStyle.ListView.Normal.GPLSA">
        <item name="fontVariant">medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">3dp</item>
        <item name="android:ellipsize">none</item>
    </style>

    <style name="CustomFontTextViewStyle.ListView.Normal.Obsetri">
        <item name="fontVariant">medium</item>
        <item name="android:textSize">13sp</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">3dp</item>
        <item name="android:ellipsize">none</item>
    </style>

    <style name="CustomFontTextViewStyle.ListView.Medium" parent="CustomFontTextViewStyle">
        <item name="fontVariant">bold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="CustomFontTextViewStyle.ListView.Medium.TwoLine">
        <item name="android:maxLines">2</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:ellipsize">none</item>
    </style>


    <style name="CustomFontTextViewStyle.ListView.Medium.FourLine">
        <item name="android:maxLines">4</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:ellipsize">none</item>
    </style>


    <style name="CustomFontTextViewStyle.ListView.Normal.MultipleLines">
        <item name="android:textSize">16sp</item>
        <item name="fontVariant">regular</item>
        <item name="android:singleLine">false</item>
        <item name="android:maxLines">4</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="CustomFontTextViewStyle.ListView.Medium.NoPadding">
        <item name="android:paddingLeft">0dp</item>
    </style>

    <style name="CustomFontTextViewStyle.ListView.Medium.NoPadding.NoBold">
        <item name="fontVariant">medium</item>
    </style>

    <style name="CustomFontTextViewStyle.ListView.Medium.White">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CustomFontTextViewStyle.ListView.Bold" parent="CustomFontTextViewStyle">
        <item name="fontVariant">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CustomFontTextViewStyle.ListView.Bold.NoPadding">
        <item name="android:ellipsize">none</item>
        <item name="android:paddingLeft">0dp</item>
    </style>

    <style name="CustomFontTextViewStyle.ListView.Bold.NoPadding.SmallSize">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="CustomFontTextViewStyle.NavBar">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="CustomFontTextViewStyle.NavBar.Bold">
        <item name="fontVariant">bold</item>
        <item name="android:textSize">23sp</item>
    </style>

    <style name="CustomFontTextViewStyle.NavBar.Black">
        <item name="fontVariant">black</item>
    </style>

    <style name="CustomFontTextViewStyle.StatusBar">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/status_bar_text_almost_white</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="CustomFontTextViewStyle.StatusBar.Bold">
        <item name="fontVariant">bold</item>
    </style>

    <style name="CustomFontTextViewStyle.StatusBar.Black">
        <item name="fontVariant">black</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="CustomFontTextViewStyle.Header.Black" parent="CustomFontTextViewStyle">
        <item name="fontVariant">black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/client_list_header_text_color</item>
    </style>

    <style name="CustomFontTextViewStyle.Home">
        <item name="fontVariant">medium</item>
        <item name="android:textSize">17sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">top|center_horizontal</item>
    </style>

    <style name="CustomFontTextViewStyle.Home.RegisterName">
        <item name="fontVariant">black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:paddingTop">65dp</item>
    </style>

    <style name="CustomFontTextViewStyle.Home.RegisterLabel">
        <item name="fontVariant">regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">90dp</item>
    </style>

    <style name="ImageButton.Home.Register" parent="@android:style/Widget.ImageButton">
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/transparent_blue_background</item>
    </style>

    <style name="CustomFontTextViewStyle.Home.Buttons">
        <item name="fontVariant">black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">#1d3651</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="CustomFontTextViewStyle.Badge">
        <item name="fontVariant">bold</item>
        <item name="android:layout_gravity">top|right</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginRight">28dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/badge</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CustomFontTextViewStyle.Badge2">
        <item name="fontVariant">bold</item>
        <item name="android:layout_gravity">top|center</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginRight">-50dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/badge</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="FPModalTabStyle" parent="CustomFontTextViewStyle.ListView.Medium">
        <item name="android:layout_height">@dimen/fp_modal_header_text_height</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/fp_modal_button_background</item>
        <item name="android:textColor">@color/fp_modal_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="HorizontalDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#BDBDBD</item>
    </style>

    <style name="CardViewContainerPadding">
        <item name="android:clipToPadding">false</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

</resources>
