<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <org.smartregister.view.customcontrols.CustomFontTextView
        android:id="@+id/txt_status_type"
        style="@style/CustomFontTextViewStyle.ListView.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="PNC" />

    <org.smartregister.view.customcontrols.CustomFontTextView
        android:id="@+id/txt_anc_status_date"
        style="@style/CustomFontTextViewStyle.ListView.Normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/txt_status_type" />

    <org.smartregister.view.customcontrols.CustomFontTextView
        android:id="@+id/str_edd_type"
        style="@style/CustomFontTextViewStyle.ListView.Normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/txt_status_type"
        android:text="Date : " />

    <org.smartregister.view.customcontrols.CustomFontTextView
        android:id="@+id/txt_status_date"
        style="@style/CustomFontTextViewStyle.ListView.Normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_status_type"
        android:layout_toRightOf="@id/str_edd_type" />

    <org.smartregister.view.customcontrols.CustomFontTextView
        android:id="@+id/txt_alert_status"
        style="@style/CustomFontTextViewStyle.ListView.Normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/str_edd_type" />
</RelativeLayout>

        